<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/beauty_picture"
        android:id="@+id/relativeLayout2">


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_in_grey"
        android:layout_below="@+id/relativeLayout2"
        android:id="@+id/ll_land">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="my pumpkin land"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:id="@+id/textView12"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_toStartOf="@+id/textView13"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/textView13" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_in_grey"
        android:layout_below="@+id/ll_land"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/ll_calendar"
        android:layout_alignLeft="@+id/ll_land"
        android:layout_alignStart="@+id/ll_land">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calendar"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/grey"
            android:id="@+id/textView14" />

    </LinearLayout>




</RelativeLayout>
