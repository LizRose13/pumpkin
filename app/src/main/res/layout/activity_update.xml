<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".MainActivity">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/pumpkin"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">


        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/arrow_left_2"
            android:id="@+id/ib_back" />



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/lajitong_2"
            android:id="@+id/iv_delete" />



    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout4">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/add_2"
            android:id="@+id/iv_add" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/et_add"
            android:textColor="@color/black"
            android:hint="添加任务"
            android:layout_weight="1" />
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/calender_2"
            android:id="@+id/iv_date_icon" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/et_date"
            android:hint="设置时间和日期"
            android:textColor="@color/black"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/alarm_icon"
            android:id="@+id/iv_alarm_icon" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/et_alarm"
            android:hint="设置提醒周期"
            android:editable="false"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7"
        android:weightSum="1">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/type_two"
            android:id="@+id/iv_type_icon" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:hint="分类"
            android:textColor="@color/black"
            android:id="@+id/et_type"
            android:layout_weight="1" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linearLayout7">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/remark_2"
            android:id="@+id/iv_remark_icon" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/et_remark"
            android:hint="备注"
            android:textColor="@color/black"
            android:enabled="false"
            android:layout_weight="1" />
    </LinearLayout>


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/bt_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bianji2"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
