<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/shape2_grey"
    android:layout_marginRight="3dp"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/not_complete"
        android:background="@drawable/done_nangua_white"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/done_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:id="@+id/done_textview"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/done_delete"
        android:background="@drawable/lajitong_2"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/done_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
